<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ImageButton
        android:id="@+id/seskayıt"
        android:layout_width="40dp"

        android:layout_height="45dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="20dp"


        android:background="@drawable/ic_baseline_settings_voice_24"

        >


    </ImageButton>

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/metin"
      android:layout_marginTop="40dp"
      >

  </EditText>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="20dp"
          android:text="yayınla"
          android:id="@+id/yayınlabtn"
          >

      </Button>

      <Button
          android:id="@+id/çevirbtn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:onClick="çeviriekran"
          android:text="çeviri ekran">

      </Button>

      <Button
          android:id="@+id/yükle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:onClick="buttondownloadmodel"

          android:text="yükle">

      </Button>
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/çeviriekran"
        android:visibility="gone"
        >





      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:layout_marginTop="40dp"
          >



          <Button
              android:id="@+id/dil"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:text="diller"


              >

          </Button>

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="yayınla"
              android:id="@+id/çeviriyayınlabtn"
              android:layout_marginStart="20dp"
              >

          </Button>


      </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/metinçeviri"
            android:layout_marginTop="40dp"
            >

        </EditText>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/diller"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/rus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:onClick="rus"

            android:text="rusca">

        </Button>

        <Button
            android:id="@+id/Cin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:onClick="china"

            android:text="China">

        </Button>

        <Button
            android:id="@+id/en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:onClick="ingilizce"

            android:text="ingilizce">

        </Button>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/diller2"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/arpça"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:onClick="arapça"

            android:text="arpça">

        </Button>

        <Button
            android:id="@+id/almanca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:onClick="almanca"

            android:text="almanca">

        </Button>

        <Button
            android:id="@+id/italyaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:onClick="italyanca"

            android:text="fransızca">

        </Button>



    </LinearLayout>






</LinearLayout>